{
  "mcpServers": {
    "supabase": {
      "type": "http",
      "url": "https://mcp.supabase.com/mcp?project_ref=acclrhzzwdutbigxsxyq&features=docs%2Caccount%2Cdatabase%2Cdebugging%2Cdevelopment%2Cbranching%2Cfunctions%2Cstorage",
      "headers": {
        "Authorization": "Bearer <SUPABASE_ACCESS_TOKEN>"
      },
      "description": "Supabase MCP Server - Database, Auth, Storage, Edge Functions, Branching"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub MCP Server - Repository operations, issues, pull requests"
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "postgresql://postgres:<DB_PASSWORD_URLENCODED>@db.acclrhzzwdutbigxsxyq.supabase.co:5432/postgres"
      },
      "description": "PostgreSQL MCP Server - Direct database access"
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"],
      "description": "Git MCP Server - Version control operations"
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "${workspaceFolder}"],
      "description": "Filesystem MCP Server - Enhanced file operations"
    }
  }
}
