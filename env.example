# ===========================================
# OpenCarBox & Carvantooo - Umgebungsvariablen
# ===========================================
# ACHTUNG: Kopiere diese Datei als .env.local und fülle die Werte aus!
# .env.local NIEMALS committen!

# ===========================================
# SUPABASE (Production Ready)
# Project: acclrhzzwdutbigxsxyq
# Dashboard: https://supabase.com/dashboard/project/acclrhzzwdutbigxsxyq
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://acclrhzzwdutbigxsxyq.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=<Kopiere aus .env oder Supabase Dashboard>

# Service Role Key (nur für Server-seitige Operationen - GEHEIM!)
SUPABASE_SERVICE_ROLE_KEY=<Kopiere aus .env oder Supabase Dashboard>

# MCP Server URL (für Cursor/Cline Integration)
MCP_SERVER_URL=https://mcp.supabase.com/mcp?project_ref=acclrhzzwdutbigxsxyq&features=docs%2Caccount%2Cdatabase%2Cdebugging%2Cdevelopment%2Cbranching%2Cfunctions%2Cstorage

# Supabase Access Token (für MCP Server & CLI)
SUPABASE_ACCESS_TOKEN=<set-in-local-env>

# Postgres Database (Direct Connection)
DATABASE_URL=<set-in-local-env>
DIRECT_URL=<set-in-local-env>

# ===========================================
# STRIPE (Zahlungsabwicklung)
# ===========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=<set-in-local-env>
STRIPE_WEBHOOK_SECRET=<set-in-local-env>

# ===========================================
# MEILISEARCH (Produktsuche)
# ===========================================
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_API_KEY=your-master-key

# ===========================================
# TECDOC API (HSN/TSN Fahrzeugdaten)
# ===========================================
TECDOC_API_KEY=your-tecdoc-api-key
TECDOC_PROVIDER_ID=your-provider-id

# ===========================================
# WHATSAPP BUSINESS API (via Twilio)
# ===========================================
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ===========================================
# RESEND (E-Mail-Versand)
# ===========================================
RESEND_API_KEY=re_...
EMAIL_FROM=noreply@carvantooo.at

# ===========================================
# BOTPRESS (Chatbot)
# ===========================================
BOTPRESS_BOT_ID=your-bot-id
BOTPRESS_HOST_URL=https://your-botpress.cloud.botpress.com

# ===========================================
# SENTRY (Error Tracking)
# ===========================================
SENTRY_DSN=https://...@sentry.io/...

# ===========================================
# PAGERDUTY (Proaktive Incident-Reaktion)
# Erzeuge in GitLab Incident Integrations den PagerDuty Integration Key
# und setze ihn lokal als Secret.
# ===========================================
PAGERDUTY_INTEGRATION_KEY=<set-in-local-env>
PAGERDUTY_SOURCE=OpenCarBox-Resilience

# ===========================================
# APP
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=OpenCarBox & Carvantooo

# ===========================================
# DEVELOPMENT
# ===========================================
NODE_ENV=development

# ===========================================
# GITLAB ORACLE 24/7 SUPPORT BOT
# Personal/Project Access Token mit api + read/write_repository scopes
# ===========================================
GITLAB_URL=https://gitlab.com
GITLAB_PROJECT_ID=<namespace%2Fproject oder numeric-id>
GITLAB_TOKEN=<set-in-local-env>
GITLAB_BOT_USERNAME=oracle-bot
ORACLE_BOT_POLL_SECONDS=60
ORACLE_BOT_MAX_ISSUES=20
ORACLE_BOT_TRIGGER=/oracle
ORACLE_BOT_STATE_FILE=.cline/oracle-gitlab-bot-state.json

# KI Provider für den Bot (DeepSeek bevorzugt)
DEEPSEEK_API_KEY=<set-in-local-env>
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com
# Alternativ OpenAI:
# OPENAI_API_KEY=<set-in-local-env>
# OPENAI_MODEL=gpt-4o-mini
