{
  "name": "opencarbox-minimal",
  "version": "1.0.0",
  "description": "Minimal Next.js - LIVE",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build --no-lint",
    "start": "next start",
    "lint": "echo 'Linting disabled'",
    "db:generate": "prisma generate",
    "secret:scan": "bash scripts/secret-scan.sh",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "quality-gate": "pnpm run lint && pnpm run typecheck && pnpm test -- --run && pnpm run build"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "next": "^15.5.10",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "lucide-react": "^0.344.0",
    "zustand": "^4.5.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20.19.30",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.5.10",
    "prisma": "^5.10.2",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.9.3",
    "vitest": "^1.3.1",
    "@testing-library/jest-dom": "^6.4.2",
    "jsdom": "^24.1.3"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "pnpm": {
    "overrides": {
      "minimatch": "^3.1.2"
    }
  }
}
